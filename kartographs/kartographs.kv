#:kivy 2.0.0
#:import Factory kivy.factory.Factory

<MyPopup@Popup>:
	auto_dismiss: False
	text: "No cards left!"
	Button:
		text: 'OK!'
		on_release: root.dismiss()

<KartographsLayout>:
	BoxLayout:
		orientation: 'vertical'
		BoxLayout:
			orientation: 'horizontal'
			BoxLayout:
				orientation: 'vertical'
				size_hint_x: 0.2
				BoxLayout:
					orientation: 'vertical'
					spacing: 10
					size_y: 100
					Label:
						id: points_label
						text: root.points_left_label
						font_size: 80
						font_weight: 'bold'
			Image:
				source: root.image_path
				size_hint_y: 0.9
				pos_hint: {'center': 0.1}
				allow_stretch: True
			Label:
				id: game_phase
				text: root.game_phase_label
				font_size: 50
				size_hint_x: 0.2
		BoxLayout:
			orientation: 'horizontal'
			size_hint_y: 0.2
			spacing: 10
			padding: 20
			Button:
				text: '...'
			Button:
				text: 'Next'
				on_release: root.next()
